#include <stdio.h>

struct StudentData {
    int roll;
    char name[50];
    int physics;
    int maths;
    int chemistry;
    int total;
};

int main() {
    struct StudentData s;

    printf("Enter roll number: ");
    scanf("%d", &s.roll);
    printf("Enter name: ");
    scanf(" %[^\n]", s.name); // read string with spaces
    printf("Enter marks in Physics, Maths, Chemistry: ");
    scanf("%d %d %d", &s.physics, &s.maths, &s.chemistry);

    s.total = s.physics + s.maths + s.chemistry;

    printf("\nRoll: %d\nName: %s\nPhysics: %d\nMaths: %d\nChemistry: %d\nTotal: %d\n",
           s.roll, s.name, s.physics, s.maths, s.chemistry, s.total);

    return 0;
}
