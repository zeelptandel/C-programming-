#include <stdio.h>

int main() {
    int arr[20] = {10, 20, 30, 40, 50};
    int n = 5;
    int pos, i;
    
    printf("Original array: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    printf("\nEnter position to delete (1 to %d): ", n);
    scanf("%d", &pos);
    
    if(pos < 1 || pos > n) {
        printf("Invalid position!\n");
        return 1;
    }
    
    // Shift elements to left from the position
    for(i = pos-1; i < n-1; i++) {
        arr[i] = arr[i+1];
    }
    
    n--;
    
    printf("Array after deletion: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    return 0;
}
