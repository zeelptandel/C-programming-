#include <stdio.h>
int main(){
    float a,b,c,d,e;
    printf("Enter marks of subject 1: ", a);
    scanf("%f", &a);
    printf("Enter marks of subject 2: ", b);
    scanf("%f", &b);
    printf("Enter marks of subject 3: ", c);
    scanf("%f", &c);
    d = a+b+c;
    e = d/3;
    printf("Total : %f", d);
    printf("\nAverage : %f", e);
    return 0;
}
