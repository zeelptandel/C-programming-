#include <stdio.h>

int main() {
    int arr[20] = {10, 20, 30, 20, 40, 50};
    int n = 6;
    int value, i, j, found = 0;
    
    printf("Original array: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    printf("\nEnter value to delete: ");
    scanf("%d", &value);
    
    // Find and delete all occurrences
    for(i = 0; i < n; i++) {
        if(arr[i] == value) {
            found = 1;
            // Shift elements to left
            for(j = i; j < n-1; j++) {
                arr[j] = arr[j+1];
            }
            n--;
            i--; // Check current position again as elements shifted
        }
    }
    
    if(!found) {
        printf("Value not found in array!\n");
        return 1;
    }
    
    printf("Array after deletion: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    return 0;
}
