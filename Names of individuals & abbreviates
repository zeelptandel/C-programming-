#include <stdio.h>
#include <string.h>

int main() {
    char name[100], word[20];
    int i = 0, j = 0, k = 0, len;

    printf("Enter full name: ");
    gets(name);
    len = strlen(name);

    printf("Abbreviated Name: ");
    for(i = 0; i <= len; i++) {
        if(name[i] == ' ' || name[i] == '\0') {
            word[j] = '\0';
            k++;
            if(strchr(name + i + 1, ' ') != NULL) // not last name
                printf("%c.", word[0]);
            else
                printf("%s", word);
            j = 0;
        } else {
            word[j++] = name[i];
        }
    }
    printf("\n");

    return 0;
}
