#include <stdio.h>

int main() {
    int n, num, sum = 0;
    float mean;

    printf("Enter how many numbers you want to input: ");
    scanf("%d", &n);

    printf("Enter %d numbers one by one:", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &num);
        sum += num;
    }

    mean = sum / (float)n;

    printf("Sum of %d numbers is: %d", n, sum);
    printf("Mean of %d numbers is: %.2f", n, mean);

    return 0;
}
