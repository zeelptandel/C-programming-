#include <stdio.h>
#include <string.h>

int main() {
    char str[100], reversed[100];
    int i, j, len;
    
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0';
    
    len = strlen(str);
    
    // Manual reversal
    for(i = len - 1, j = 0; i >= 0; i--, j++) {
        reversed[j] = str[i];
    }
    reversed[j] = '\0';
    
    printf("Original string: %s\n", str);
    printf("Reversed string: %s\n", reversed);
    
    return 0;
}
