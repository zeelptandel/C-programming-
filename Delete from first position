#include <stdio.h>

int main() {
    int arr[20] = {10, 20, 30, 40, 50};
    int n = 5;
    int i;
    
    printf("Original array: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    if(n == 0) {
        printf("\nArray is empty!\n");
        return 1;
    }
    
    // Shift elements to left
    for(i = 0; i < n-1; i++) {
        arr[i] = arr[i+1];
    }
    
    n--; // Decrease element count
    
    printf("\nArray after deleting first element: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    return 0;
}
