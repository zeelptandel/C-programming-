#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *fp;
    char ch;
    int lines = 0, words = 0, chars = 0, spaces = 0;

    fp = fopen("input.txt", "r");
    if(fp == NULL) {
        printf("Cannot open file.\n");
        return 1;
    }

    while((ch = fgetc(fp)) != EOF) {
        chars++;
        if(ch == '\n')
            lines++;
        if(isspace(ch))
            spaces++;
        if(ch == ' ' || ch == '\n' || ch == '\t')
            words++;
    }

    fclose(fp);

    printf("Lines = %d\nWords = %d\nCharacters = %d\nSpaces = %d\n",
           lines, words, chars, spaces);

    return 0;
}
