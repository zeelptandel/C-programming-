#include <stdio.h>


void bubbleSort(int arr[], int n, int order) {
    int i, j, temp;
    for(i = 0; i < n-1; i++) {
        for(j = 0; j < n-i-1; j++) {
            if(order == 1) { 
                if(arr[j] > arr[j+1]) {
                    temp = arr[j];
                    arr[j] = arr[j+1];
                    arr[j+1] = temp;
                }
            } else { 
                if(arr[j] < arr[j+1]) {
                    temp = arr[j];
                    arr[j] = arr[j+1];
                    arr[j+1] = temp;
                }
            }
        }
    }
}
void selectionSort(int arr[], int n, int order) {
    int i, j, min_idx, temp;
    for(i = 0; i < n-1; i++) {
        min_idx = i;
        for(j = i+1; j < n; j++) {
            if(order == 1) { 
                if(arr[j] < arr[min_idx])
                    min_idx = j;
            } else { 
                if(arr[j] > arr[min_idx])
                    min_idx = j;
            }
        }
        temp = arr[min_idx];
        arr[min_idx] = arr[i];
        arr[i] = temp;
    }
}

int main() {
    int arr[5];
    int i, choice, order;
    
    printf("Enter 5 values:\n");
    for(i = 0; i < 5; i++) {
        printf("Enter value %d: ", i+1);
        scanf("%d", &arr[i]);
    }
    
    printf("\nChoose sorting technique:\n");
    printf("1. Bubble Sort\n");
    printf("2. Selection Sort\n");
    printf("Enter your choice (1 or 2): ");
    scanf("%d", &choice);
    
    printf("\nChoose order:\n");
    printf("1. Ascending\n");
    printf("2. Descending\n");
    printf("Enter your choice (1 or 2): ");
    scanf("%d", &order);
    
    if(choice == 1) {
        bubbleSort(arr, 5, order);
        printf("\nSorted using Bubble Sort:\n");
    } else {
        selectionSort(arr, 5, order);
        printf("\nSorted using Selection Sort:\n");
    }
    
    for(i = 0; i < 5; i++) {
        printf("%d ", arr[i]);
    }
    
    return 0;
}
