#include <stdio.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    char course[50];
    char major[50];
    char minor[50];
};

void printAllStudents(struct Student s[], int n) {
    printf("List of all students:\n");
    for(int i = 0; i < n; i++)
        printf("%s\n", s[i].name);
}

void printStudentByRoll(struct Student s[], int n, int roll) {
    for(int i = 0; i < n; i++) {
        if(s[i].roll == roll) {
            printf("Roll: %d\nName: %s\nCourse: %s\nMajor: %s\nMinor: %s\n",
                   s[i].roll, s[i].name, s[i].course, s[i].major, s[i].minor);
            return;
        }
    }
    printf("Student with roll %d not found.\n", roll);
}

int main() {
    struct Student students[10] = {
        {1,"Alice","BSc","Physics","Maths"},
        {2,"Bob","BSc","Chemistry","Biology"},
        {3,"Charlie","BSc","Maths","Physics"},
        {4,"David","BSc","Computer Science","Maths"},
        {5,"Eva","BSc","Biology","Chemistry"},
        {6,"Frank","BSc","Physics","Computer Science"},
        {7,"Grace","BSc","Maths","Biology"},
        {8,"Helen","BSc","Chemistry","Physics"},
        {9,"Ian","BSc","Computer Science","Maths"},
        {10,"Jane","BSc","Physics","Chemistry"}
    };

    printAllStudents(students, 10);

    int rollNo;
    printf("\nEnter roll number to search: ");
    scanf("%d", &rollNo);
    printStudentByRoll(students, 10, rollNo);

    return 0;
}
