#include <stdio.h>

int main() {
    int a[4][4], b[16], i, j, k, temp;

    printf("Enter 4x4 matrix:\n");
    for(i = 0; i < 4; i++)
        for(j = 0; j < 4; j++)
            scanf("%d", &a[i][j]);

    // Convert 2D â†’ 1D
    k = 0;
    for(i = 0; i < 4; i++)
        for(j = 0; j < 4; j++)
            b[k++] = a[i][j];

    // Sort 1D array (Bubble Sort)
    for(i = 0; i < 16 - 1; i++)
        for(j = 0; j < 16 - i - 1; j++)
            if(b[j] > b[j + 1]) {
                temp = b[j];
                b[j] = b[j + 1];
                b[j + 1] = temp;
            }

    printf("\nSorted 1D array:\n");
    for(i = 0; i < 16; i++)
        printf("%d ", b[i]);

    return 0;
}
