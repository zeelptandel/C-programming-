#include <stdio.h>

// Function to update both max and min using call by reference
void updateMaxMin(int arr[], int size, int *max, int *min) {
    // Initialize max and min with first element
    *max = arr[0];
    *min = arr[0];
    
    // Iterate through array to find actual max and min
    for(int i = 1; i < size; i++) {
        if(arr[i] > *max) {
            *max = arr[i];
        }
        if(arr[i] < *min) {
            *min = arr[i];
        }
    }
}

// Function to print array
void printArray(int arr[], int size) {
    printf("Array: ");
    for(int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int arr[100];
    int size, max, min;
    
    printf("Enter the number of elements (max 100): ");
    scanf("%d", &size);
    
    if(size <= 0 || size > 100) {
        printf("Invalid size! Please enter between 1 and 100.\n");
        return 1;
    }
    
    printf("Enter %d elements:\n", size);
    for(int i = 0; i < size; i++) {
        printf("Element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }
    
    // Display original array
    printArray(arr, size);
    
    // Call function to update max and min using call by reference
    updateMaxMin(arr, size, &max, &min);
    
    // Display results
    printf("\n--- Results ---\n");
    printf("Maximum value: %d\n", max);
    printf("Minimum value: %d\n", min);
    printf("Range: %d\n", max - min);
    
    return 0;
}
